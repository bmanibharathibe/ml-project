# predict.py

import joblib
import numpy as np
from config import MODEL_FILE


def make_prediction():

    # Load saved model
    model = joblib.load(MODEL_FILE)

    # Example flower data
    sample = np.array([[5.1, 3.5, 1.4, 0.2]])

    # Predict
    result = model.predict(sample)

    print("Prediction result:", result)


if __name__ == "__main__":
    make_prediction()
